lineCounts <- read.csv("lineCounts.csv")
vocabCounts <- read.csv("vocabCounts.csv")
?cbind
View(cbind(lineCounts,vocabCounts))
View(cbind(lineCounts,vocabCounts[,2]))
counts <- cbind(lineCounts,vocabCounts[,2])
library(ggplot2)
columnames(counts) <- c("File","Lines","Vocabulary")
colnames(counts) <- c("File","Lines","Vocabulary")
ggplot(counts,aes(x="Lines",y="Vocuabular")) + geom_point()
ggplot(counts,aes(x=Lines,y=Vocuabulary)) + geom_point()
ggplot(counts,aes(x=Lines,y=Vocabulary)) + geom_point()
commentCounts <- read.csv("commentCounts.csv")
counts <- cbind(lineCounts,vocabCounts[,2],commentCounts[,2])
colnames(counts) <- c("File","Lines","Vocabulary","Comments")
ggplot(counts,aes(x=Lines,y=Comments)) + geom_point()
ggplot(counts,aes(x=Lines,y=Comments)) + geom_point(aes(color=Vocabulary))
ggplot(counts,aes(x=Lines,y=Comments)) + geom_point(aes(color=Vocabulary)) +scale_x_continuous(trans='log2')
ggplot(counts,aes(x=Lines,y=Comments)) + geom_point(aes(color=Vocabulary)) +scale_x_continuous(trans='log2')+scale_y_continuous(trans='log2')
ggplot(counts,aes(x=Lines,y=Comments)) + geom_point(aes(color=Vocabulary)) +scale_x_continuous(trans='log2')+scale_y_continuous(trans='log2') + geom_text(data=counts[counts$Comments>20,3])
ggplot(counts,aes(x=Lines,y=Comments)) + geom_point(aes(color=Vocabulary)) +scale_x_continuous(trans='log2')+scale_y_continuous(trans='log2') + geom_text(data=counts[counts$Comments>20,])
ggplot(counts,aes(x=Lines,y=Comments)) + geom_point(aes(color=Vocabulary)) +scale_x_continuous(trans='log2')+scale_y_continuous(trans='log2') + geom_text(data=counts[counts$Comments>20,],aes(label=File))
ggplot(counts,aes(x=Lines,y=Comments)) + geom_point(aes(color=Vocabulary)) +scale_x_continuous(trans='log2')+scale_y_continuous(trans='log2') + geom_text(data=counts[counts$Comments>100,],aes(label=File))
ggplot(counts,aes(x=Lines,y=Comments)) + geom_point(aes(color=Vocabulary))  + geom_text(data=counts[counts$Comments>100,],aes(label=File))
